<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.EstoqueFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/card"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/textViewValorEstoquePrecoVarejo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Varejo RS400.000,00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewValorEstoquePrecoVenda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Venda R$800.000,00"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/card"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/editTextPesquisaEstoque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borda_edittext"
                android:drawableLeft="@drawable/lupa"
                android:padding="15dp"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerCategoriaEstoque"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/borda_edittext"
                    android:entries="@array/categorias_produto"
                    android:padding="15dp"
                    android:spinnerMode="dialog"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinnerFornecedorEstoque"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/borda_edittext"
                    android:padding="15dp"
                    android:spinnerMode="dialog"
                    android:textSize="20sp" />


            </LinearLayout>

            <Button
                android:id="@+id/buttonPesquisarProdutoEstoque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/botao_arredondado"
                android:padding="10dp"
                android:text="@string/button_pesquisar"
                android:textAllCaps="false"
                android:textSize="20sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProdutosEstoque"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp" />

    </LinearLayout>

</FrameLayout>