<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewFotoProdutoRecyclerViewAdapter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/sem_imagem"
            android:foregroundGravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/editTextNomeProdutoRecyclerViewAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Produto"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/editTextQuantidadeProdutoRecyclerViewAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantidade do Produto"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/editTextValorVarejoProdutoRecyclerViewAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor varejo do Produto"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/editTextValorVendaProdutoRecyclerViewAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor venda do Produto"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/editTextFornecedorProdutoRecyclerViewAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fornecedor do Produto"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/editTextCategoriaProdutoRecyclerViewAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="categoria do Produto"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/editTextDescricaoProdutoRecyclerViewAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do Produto"
                android:textSize="18sp"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>