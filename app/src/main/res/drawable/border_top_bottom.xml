<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="1dp"> <!-- Espessura da borda superior -->
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Cor de preenchimento transparente -->
            <stroke
                android:width="1dp"
            android:color="@color/border_color" />
        </shape>
    </item>
    <item android:bottom="1dp"> <!-- Espessura da borda inferior -->
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Cor de preenchimento transparente -->
            <stroke
                android:width="1dp"
            android:color="@color/border_color" />
        </shape>
    </item>
</layer-list>
